<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="4dp"
        >
        <LinearLayout
            android:id="@+id/layfirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="Best Sallersadfsadfsdfsadfsadfasdfsafasdfasdf"
                style="@style/TextAppearance.AppCompat.Subhead"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"
                android:layout_centerInParent="true"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/fav_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/laysecond"
            android:layout_below="@+id/layfirst"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FAFBFD"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                card_view:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/productitemimg"
                    android:scaleType="fitXY"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/laythir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/laysecond"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Best Saller"
                android:textStyle="bold"
                android:textSize="18dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layfour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/laythir"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NonVeg Hut"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layfour"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="$ 16"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"

                android:layout_height="wrap_content"
                android:text="3 %"
                android:textColor="@color/red"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                />
            <androidx.appcompat.widget.AppCompatButton
                style="@style/AddItem"
                android:layout_width="0dp"

                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:text="ADD"

                />
        </LinearLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/slidimag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.appcompat.widget.AppCompatTextView>


</androidx.cardview.widget.CardView>